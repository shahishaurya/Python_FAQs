while True:
    num = int(input("Display multiplication table of? "))
    for i in range(1, 11):
        print(num, 'x', i, '=', num*i)
    while True:
        answer = str(input('Run again? (y/n): '))
        if answer in ('y', 'n'):
            break
        print("invalid input.")
    if answer == 'y':
        continue
    else:
        print("Goodbye")
        break
